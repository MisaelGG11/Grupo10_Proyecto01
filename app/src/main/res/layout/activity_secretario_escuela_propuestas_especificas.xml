<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecretarioEscuelaPropuestasEspecificasActivity">

    <TextView
        android:id="@+id/textViewTitulose"
        android:layout_width="412dp"
        android:layout_height="37dp"
        android:layout_marginTop="36dp"
        android:text="@string/txtViewDocentePropuestaGeneralTitulo"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018" />

    <TextView
        android:id="@+id/textViewEstadoPropuestas"
        android:layout_width="138dp"
        android:layout_height="30dp"
        android:layout_marginEnd="28dp"
        android:background="#b4ccb9"
        android:text="[]"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toEndOf="@+id/textViewSubTitulose1"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitulose"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/textViewSubTitulose1"
        android:layout_width="111dp"
        android:layout_height="30dp"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="580dp"
        android:background="#b4ccb9"
        android:text="@string/txtViewDocentePropuestaEspecificaInsertarLocal"
        android:textAlignment="center"

        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitulose"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewSubTitulose2"
        android:layout_width="412dp"
        android:layout_height="37dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="516dp"
        android:text="@string/txtViewDocentePropuestaGeneralPropuestasEspecificas"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSubTitulose1"
        app:layout_constraintVertical_bias="0.103" />

    <ListView
        android:id="@+id/listViewPropuestasEspecificassecretario"
        android:layout_width="348dp"
        android:layout_height="380dp"
        android:layout_marginBottom="112dp"
        android:background="#eae2cf"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSubTitulose2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnRevisarPropuestaEspecifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSecretarioRevisar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewPropuestasEspecificassecretario" />

</androidx.constraintlayout.widget.ConstraintLayout>