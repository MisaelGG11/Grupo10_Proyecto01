<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".EventoEspecialInsertarActivity">

    <EditText
        android:id="@+id/editTextNombreEventoEspecial"
        android:layout_width="271dp"
        android:layout_height="53dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/txtViewNombreEventoEspecial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextFechaEventoEspecial"
        android:layout_width="267dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/txtViewFechaEventoEspecial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLocalidadEventoEspecial" />

    <Spinner
        android:id="@+id/spinnerHorarioEventoEspecial"
        android:layout_width="179dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextFechaEventoEspecial" />

    <EditText
        android:id="@+id/editTextTipoEventoEspecial"
        android:layout_width="270dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/txtViewTipoEventoEspecial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNombreEventoEspecial" />

    <Button
        android:id="@+id/btnCrearEventoEspecial"
        android:layout_width="125dp"
        android:layout_height="47dp"
        android:layout_marginTop="46dp"
        android:backgroundTint="@color/purple_700"
        android:text="@string/btnCrearEventoEspecial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCancelarActualizarEventoEspecial"
        app:layout_constraintHorizontal_bias="0.626"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerHorarioEventoEspecial"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextLocalidadEventoEspecial"
        android:layout_width="266dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/txtViewLocalidadEventoEspecial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.337"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEdificioEventoEspecial" />

    <TextView
        android:id="@+id/textViewSeleccionarHorarioEventoEspecial"
        android:layout_width="136dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:text="@string/txtViewSeleccionarHorarioEventoEspecial"
        app:layout_constraintBottom_toTopOf="@+id/btnCrearEventoEspecial"
        app:layout_constraintEnd_toStartOf="@+id/spinnerHorarioEventoEspecial"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextFechaEventoEspecial"
        app:layout_constraintVertical_bias="0.07" />

    <EditText
        android:id="@+id/editTextEdificioEventoEspecial"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/txtViewEdificioEventoEspecial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.354"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTipoEventoEspecial" />

    <Button
        android:id="@+id/btnCancelarActualizarEventoEspecial"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="44dp"
        android:text="@string/btnCancelarEventoEspecial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerHorarioEventoEspecial" />

</androidx.constraintlayout.widget.ConstraintLayout>